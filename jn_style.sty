% Comando que adiciona contador de questão
\newcounter{questaocounter} % contador para as questões
\newcommand{\questao}{%
    \stepcounter{questaocounter}% Incrementa o contador de questões
    \textbf{Questão \thequestaocounter.} % Formato da questão
}

% Comando que adiciona icone de email.
\newcommand{\email}[1]{%
  \href{mailto:#1}{%
    \faIcon[regular]{envelope} E-mail: {#1}%
  }%
}%

% Comando para adicionar titulo e autor. 
\newenvironment{titulo}[4]{
  \begin{center}
    \textbf{\uppercase{#1}}
  \end{center}
  \vspace{1.2cm}
  \begin{flushright}
    \textbf{#2. \footnote{#3. \email{#4}.}}
}{\end{flushright}}

% Comando para adicionar titulo e autor para duplas
\newenvironment{tituloT}[7]{
  \begin{center}
    \textbf{\uppercase{#1}}
  \end{center}
  \vspace{1.2cm}
  \begin{flushright}
    \textbf{#2. \footnote{#3. \email{#4}.}}
    \\
    \textbf{#5. \footnote{#6. \email{#7}.}}\hspace{-0.1cm}
}{\end{flushright}}

\newenvironment{quest}[1]{
  \noindent
  \stepcounter{questaocounter}% Incrementa o contador de questões
  \textbf{Questão \thequestaocounter. #1} % Formato da questão
}{\vspace{12pt} \hrule}